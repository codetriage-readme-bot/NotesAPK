<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.lusersks.notes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:name=".provider.NotesProvider"
            android:authorities="com.gmail.lusersks.notes.noteslist" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.PreferencesActivity"
            android:label="Preferences" />

        <activity
            android:name=".views.FormActivity"
            android:label=""
            android:theme="@style/Theme.AppCompat.Light.Dialog" />

        <activity
            android:name=".views.ShowActivity"
            android:label=""
            android:theme="@style/Theme.AppCompat.Light.Dialog" />

    </application>

</manifest>